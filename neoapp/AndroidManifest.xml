        <provider
            android:name=".providers.NeoAppContentProvider"
            android:authorities="com.neo.providers.RecordProvider"
            android:multiprocess="false" >
        </provider>
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
